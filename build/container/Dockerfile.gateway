# Build the manager binary
FROM golang:1.22 AS builder
ARG TARGETOS
ARG TARGETARCH

WORKDIR /workspace

RUN apt-get update && apt-get install -y \
    libkrb5-dev libnorm-dev libpgm-dev libzmq3-dev

# Copy the Go Modules manifests
COPY go.mod go.mod
COPY go.sum go.sum
# cache deps before building and copying source so that we don't need to re-download as much
# and so that source changes don't invalidate our downloaded layer
RUN go mod download

# Copy the go source
COPY cmd/ cmd/
COPY api/ api/
COPY pkg/ pkg/

ENV CGO_ENABLED=1
# - zmq links to sodium, norm, pgm and bsd and krb5
# - norm links to protokit
# - krb4 links to gssapi_krb5 and k5crypto
ENV CGO_LDFLAGS="\
-Wl,-Bstatic \
-l:libzmq.a \
-l:libsodium.a \
-l:libnorm.a \
-l:libprotokit.a \
-l:libpgm.a \
-Wl,-Bdynamic \
-lbsd \
-lkrb5 \
-lgssapi_krb5 \
-lk5crypto \
-lpthread -lm -lstdc++"

RUN GOOS=${TARGETOS:-linux} GOARCH=${TARGETARCH} \
    go build -tags zmq \
    -ldflags "-extldflags '${CGO_LDFLAGS}'" \
    -a -o gateway-plugins cmd/plugins/main.go

# Use distroless as minimal base image to package the manager binary
# Refer to https://github.com/GoogleContainerTools/distroless for more details
FROM gcr.io/distroless/static:nonroot
WORKDIR /
COPY --from=builder /workspace/gateway-plugins .
USER 65532:65532

ENTRYPOINT ["/gateway-plugins"]
